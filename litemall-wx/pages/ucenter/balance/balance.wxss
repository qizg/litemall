page {
    height: 100%;
    width: 100%;
    background: #f4f4f4;
}

.balance_content {
    display:block;
    background: #fff;
    border-radius: 15rpx;
    margin: 30rpx;
    padding: 20rpx;
}
.balance_content .balance_content_title {
    color: #999999;
    font-size: 26rpx;
    margin: 20rpx;
}

.balance_content .price_tag {
    color: #a78845;
    font-size: 32rpx;
    margin-left: 20rpx;
    margin-right: 10rpx;
}

.balance_content .price {
    color: #a78845;
    font-size: 68rpx;
}

.recharge_bg {
    background: #fff;
    bottom:0rpx;
    width: 100%;
    padding: 20rpx;
    position:absolute;
}
.recharge {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background: #000;
    color: #a78845;
    font-size: 30rpx;
    border-radius: 10rpx;
}